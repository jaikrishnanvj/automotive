                          Payment method: <%= order.payment %> <br>
                            Status: <%= order.status %>
                        </p>
                        <a href="#">Download info</a>
                      </div>
                    </article>
                  </div>
                  <div class="col-md-4">
                    <!-- Delivery Information Card -->
                    <article class="icontext align-items-start">
                      <!-- Delivery Information Icon -->
                      <span class="icon icon-sm rounded-circle bg-primary-light">
                        <i class="text-primary material-icons md-place"></i>
                      </span>
  
                      <!-- Delivery Information Text -->
                      <div class="text">
                        <h6 class="mb-1">Deliver to</h6>
                        <p class="mb-1">
  
                          <%= order.address.streetAddress %> <br>
                            <%= order.address.city %><br>
                              <%= order.address.zipCode %>
                        </p>
                        <a href="#">View profile</a>
                      </div>
                    </article>
                  </div>
                </div> <!-- row // -->

                <!-- Order Products Table -->
              <div class="row">
                <div class="col-lg-7">
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th width="40%">Product</th>
                          <th width="20%">Unit Price</th>
                          <th width="20%">Quantity</th>

                          <th width="20%" class="text-end">Total</th>
                          <th> order Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <!-- Loop through order products -->
                        <% if (order && products && products.length> 0) { %>
                          <% for (let i=0; i < products.length; i++) { %>

                            <tr>
                              <td class="align-middle">
                                <a class="itemside" href="#">
                                  <div class="left">
                                    <!-- Assuming you have an 'image' property in the product schema -->
                                    <img src="/admin-asset/productImage/<%= products[i].image[0].filename %>" width="40"
                                      height="40" class="img-xs" alt="Item">
                                  </div>
                                  <div class="info">
                                    <%= products[i].productName %>
                                      <!-- Assuming 'productName' is a property of your product schema -->
                                  </div>
                                </a>
                              </td>
                              <td class="align-middle">
                                $<%= order.products[i].price %>
                              </td>
                              <td class="align-middle">
                                <%= order.products[i].quantity %>
                              </td>

                              <td class="text-end align-middle">
                                $<%= order.products[i].price %>
                              </td>
                              <td class="align-middle">
                                <% if (order.products[i].status==="Cancelled" ) { %>
                                  Cancelled
                                  <% }else if (order.products[i].status==="Returned" || order.status==="Returned" ) { %>
                                    Returned
                                 
                                    <% } else if (order.status==="Delivered" || order.products[i].status==="Delivered" )
                                      { %>
                                        <button class="btn btn-danger"
                                        onclick="initiateReturn('<%= order._id %>', '<%= order.products[i]._id %>')">Return
                                        </button>
                                      <% } else { %>
                                        <button class="btn btn-danger"
                                          onclick="confirmCancel('<%= order._id %>','<%= products[i]._id %>')">Cancel</button>
                                        <% } %>
                              </td>


                            </tr>
                            <% } %>
                              <% } else { %>
                                <tr>
                                  <td colspan="5">No products in this order</td>
                                </tr>
                                <% } %>
                      </tbody>

