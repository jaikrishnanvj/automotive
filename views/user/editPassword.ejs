    <script>
       function submitForm() {
    const formData = new FormData(document.getElementById("enq"));

    fetch("/editPassword", {
        method: "POST",
        body: formData
    })
    .then(response => {
        if (response.ok) {
            return response.json();
        }
        throw new Error("Network response was not ok.");
    })
    .then(data => {
        console.log(data);
        console.log(formData,"formdata");
        if (data.success) { // Assuming the server sends a success flag
            Swal.fire({
                icon: 'success',
                title: 'Password Updated',
                text: data.message,
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/account";
                }
            });
        } else {
            // Handle other cases where the password update was not successful
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: data.message,
                confirmButtonColor: '#d33',
                confirmButtonText: 'OK'
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Something went wrong! Please try again later.',
            confirmButtonColor: '#d33',
            confirmButtonText: 'OK'
        });
    });
}


